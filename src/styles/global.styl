@import 'mixin'

$fonts = Lato,"Microsoft Jhenghei","Hiragino Sans GB","Microsoft YaHei",sans-serif
$link-color = #fff

body
    font-family $fonts
    font-size 16px

a
    text-decoration none
    color $link-color
    &:visited
        color #000


div[role=dialog]
    background-color rgba(255,255,255, .5)
    width 100%
    height 100%
    display flex
    align-items center
    justify-content center
    position fixed
    top 0
    left 0

.modal
    position absolute
    display flex
    align-items center
    justify-content center
    height 100%
    &-content
        min-height 100vh
        display flex
        align-items center
        justify-content center



